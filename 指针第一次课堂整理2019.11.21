//用指针改写 #include<string.h>文件头下的函数
//strlen
int mystrlen(char *x)
{
	char *y=x;
	while(*y++);
	return y-x-1;
} 

//strcpy
//第一种 
void mystrcpy(char *p1,char *p2)
{
	while(*p1++=*p2++);
}
//第二种
char * mystrcpy(char *p1,char *p2)
{
	char *h=p1;
	while(*p1++=*p2++);
	return h;	
}

