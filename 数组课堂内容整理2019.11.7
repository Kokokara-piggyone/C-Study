//输入 N个数，输出最大值及它的坐标 。 
#include<stdio.h>
#define N 10
int main()
{
	int i,a[N],max,idx;
	for(i=0;i<N;i++)
		scanf("%d",&a[i]);
	max=a[0],idx=0;
	for(i=1;i<N;i++) //不用加花括号 ，if语句中间为 ，连接。 
		if(max<a[i])
			max=a[i],idx=i;
	printf("max=%d,idx=%d\n",max,idx);
	return 0;
}

